<h1>Listing term_counts</h1>

<table>
  <tr>
    <th>Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @term_counts.each do |term_count| %>
  <tr>
    <td><%= term_count.count %></td>
    <td><%= link_to 'Show', term_count %></td>
    <td><%= link_to 'Edit', edit_term_count_path(term_count) %></td>
    <td><%= link_to 'Destroy', term_count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

